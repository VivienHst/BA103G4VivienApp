<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">



    <FrameLayout
        android:id="@+id/mem_act_part_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout">


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="#bf7a41"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/mem_act_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/act_icon01"
            android:layout_weight="1"
            android:padding="12dp"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/mem_act_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/qr_code"
            android:layout_weight="1"
            android:padding="16dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/mem_act_clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/timer01"
            android:layout_weight="1"
            android:padding="14dp"
            android:scaleType="fitCenter" />

    </LinearLayout>


</RelativeLayout>
