<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:padding="8dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prod_itme_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/prod01"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_prod_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="ProductName"
                    android:textColor="#311f00"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_prod_conut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$500 x 2"
                    android:textSize="14sp"
                    android:layout_margin="4dp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/order_prod_detail_bt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:background="#c9ad76"
                android:text="發表心得"
                />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>