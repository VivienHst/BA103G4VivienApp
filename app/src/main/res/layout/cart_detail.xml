<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cart_item_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/prod01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_prod_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="ProductName"
                    android:textColor="#311f00"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/cart_prod_conut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$500 x 2"
                    android:textSize="16dp"
                    android:layout_margin="4dp"
                    />
                <LinearLayout
                    android:id="@+id/change_prod_ll"
                    android:layout_width="160dp"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/cart_prod_minus_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/prod_minus01" />

                    <EditText
                        android:id="@+id/cart_prod_cont_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/cart_prod_plus_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/prod_plus01" />



                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/prod_count_change_bt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:background="#c9ad76"
                android:layout_margin="2dp"
                android:text="修改"
                />

            <Button
                android:id="@+id/prod_delete_bt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="5"
                android:background="#c9ad76"
                android:text="刪除" />

