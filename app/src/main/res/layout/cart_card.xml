<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="#fff5c4"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.3"
            android:orientation="vertical">


            <TextView
                android:id="@+id/cart_store_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿兜仔咖啡店"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/cart_store_prod_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="商品共 1 項"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/cart_store_total_pay_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="$1000"
                android:textSize="16dp" />

        </LinearLayout>

        <Button
            android:id="@+id/cart_prod_list_bt"
            android:layout_width="80dp"
            android:layout_height="40dp"

            android:layout_marginRight="10dp"
            android:layout_weight="0.7"
            android:background="#c9ad76"
            android:text="商品清單" />


        <LinearLayout
            android:id="@+id/prod_list_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:scrollbars="none">

            </ListView>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
