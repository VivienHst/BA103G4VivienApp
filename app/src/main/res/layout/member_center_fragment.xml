<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7ebde">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/centerMemImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mem01" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/centerMemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:text="mrbean0123"
                android:textColor="#006699"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cenetrMemLv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="手沖咖啡達人"
                android:textSize="14dp" />

        </LinearLayout>

        <!--<ImageButton-->
            <!--android:id="@+id/imageButton"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:background="#ffffff"-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:layout_marginLeft="80dp"-->
            <!--android:padding="2dp"-->
            <!--android:scaleType="fitCenter"-->
            <!--app:srcCompat="@drawable/chat01" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/centerOrderBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#e7fbf0"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="訂單查詢" />

        <Button
            android:id="@+id/centerFoProdBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#e7fbf0"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="追蹤商品管理" />

        <Button
            android:id="@+id/centerFoSoreBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#e7fbf0"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="追蹤店家管理" />

        <Button
            android:id="@+id/centerActBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#e7fbf0"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="活動管理" />

        <Button
            android:id="@+id/centerMemDataBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#e7fbf0"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="會員資料管理" />


    </LinearLayout>

</LinearLayout>